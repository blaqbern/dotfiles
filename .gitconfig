[core]
  excludesfile = ~/.gitignore
  editor = vim

[color]
  ui = auto

[color "branch"]
  current = cyan reverse
  local = cyan
  remote = blue

[color "diff"]
  meta = yellow bold
  old = red
  new = green

[color "status"]
  header = normal
  branch = cyan
  added = green
  changed = yellow
  untracked = red
